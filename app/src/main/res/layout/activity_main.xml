<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_home"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMy"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_my" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@mipmap/icon_msg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivOverTimeOrder"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@mipmap/icon_warning"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivBuy"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@mipmap/icon_buy"
            android:visibility="invisible" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/bg_main">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_home"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout style="@style/style_layout_my_item_no_bg">

                                <TextView
                                    style="@style/style_font_normal_black"
                                    android:gravity="left"
                                    android:text="资产"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:id="@+id/ivAssetEyeTrade"
                                    style="@style/w_40"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:padding="@dimen/dp_4"
                                    android:scaleType="centerInside"
                                    android:src="@mipmap/icon_eye_open" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="40dp">

                                <TextView
                                    android:id="@+id/tvAssetAmountTrade"
                                    style="@style/style_font_normal"
                                    android:gravity="left"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="40dp">

                                <TextView
                                    android:id="@+id/tvAssetMoneyTrade"
                                    style="@style/style_font_normal"
                                    android:gravity="left"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvAssetMoneyTradeBail"
                                    style="@style/style_font_xxlarger"
                                    android:background="@drawable/shape_bg_green_half"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:text=""
                                    android:textSize="@dimen/font_mini" />

                                <TextView
                                    android:id="@+id/tvAssetMoneyTradeDj"
                                    style="@style/style_font_xxlarger"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="@drawable/shape_bg_green_half"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:text=""
                                    android:textSize="@dimen/font_mini" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_72"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_40"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout style="@style/style_layout_my_item_no_bg">

                                <TextView
                                    style="@style/style_textview_my"
                                    android:gravity="right"
                                    android:text="累计佣金"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|right">

                                <TextView
                                    android:id="@+id/tvAssetCommission"
                                    style="@style/style_font_normal"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/tvMoneyTypeTag"
                                    style="@style/style_font_normal"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="40dp">

                            </LinearLayout>

                            <LinearLayout
                                style="@style/style_layout_my_item_no_bg"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvAssetCommissionY"
                                    style="@style/style_font_xxlarger"
                                    android:background="@drawable/shape_bg_green_half"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:text=""
                                    android:textSize="@dimen/font_mini" />

                                <TextView
                                    android:id="@+id/tvAssetCommissionUn"
                                    style="@style/style_font_xxlarger"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="@drawable/shape_bg_green_half"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:text=""
                                    android:textSize="@dimen/font_mini" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/shape_bg_white"
                        android:orientation="vertical"
                        android:paddingLeft="6dp"
                        android:paddingTop="16dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvOrderCount"
                                    style="@style/style_font_normal_black" />

                                <TextView
                                    android:id="@+id/tvOrderCountDes"
                                    style="@style/style_font_normal_black"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/str_fact_order_count"
                                    android:textSize="@dimen/font_mini" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvCommission"
                                    style="@style/style_font_normal_black" />

                                <TextView
                                    style="@style/style_font_normal_black"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/str_fact_commission"
                                    android:textSize="@dimen/font_mini" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvFinishRate"
                                    style="@style/style_font_normal_black" />

                                <TextView
                                    style="@style/style_font_normal_black"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/str_finish_rate"
                                    android:textSize="@dimen/font_mini" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvOrderSpeed"
                                    style="@style/style_font_normal_black" />

                                <TextView
                                    style="@style/style_font_normal_black"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/str_order_speed"
                                    android:textSize="@dimen/font_mini" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvStartOrder"
                                style="@style/style_font_normal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/bg_home"
                                android:gravity="center|right"
                                android:paddingLeft="@dimen/dp_40"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_40"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="@string/str_start_order" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_main"
                    android:visibility="gone">

                    <include
                        android:id="@+id/llStopOrder"
                        layout="@layout/view_stop_order"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/llNotStartOrder"
                        layout="@layout/view_not_start_order"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/llOrderDetail"
                        layout="@layout/view_order_detail"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/llAuthStatus"
                        layout="@layout/view_auth_status"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/llOrderList"
                        layout="@layout/activity_common_listview3"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llAccectOrder"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg_home"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvType"
                            style="@style/style_font_normal"
                            android:layout_width="100dp"
                            android:text="@string/str_duiru" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/color_12000000" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStatus"
                            style="@style/style_font_normal"
                            android:layout_height="match_parent"
                            android:background="@mipmap/icon_accept_order_status"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="@string/str_not_start_order"
                            android:textColor="@color/home_text_color_accept" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/color_12000000" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="vertical">

                        <TextView
                            style="@style/style_font_normal"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="@string/str_start_order" />

                    </LinearLayout>

                </LinearLayout>

                <!--按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape_bg_white"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingTop="16dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll1" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="一键买币"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll2" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="我的订单"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll3" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="资金明细"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll4" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="店铺列表"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll5" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="商品列表"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll6" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="充币"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll7" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="提币"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <ImageView
                                style="@style/w_40"
                                android:src="@mipmap/ll1" />

                            <TextView
                                style="@style/style_font_normal_black"
                                android:layout_marginTop="10dp"
                                android:text="一键买币"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
