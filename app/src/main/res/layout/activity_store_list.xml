<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderCount"
                    style="@style/style_font_normal_black" />

                <TextView
                    style="@style/style_font_normal_grey"
                    android:layout_marginTop="10dp"
                    android:text="店铺数"
                    android:textSize="@dimen/font_mini" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCommission"
                    style="@style/style_font_normal_black" />

                <TextView
                    style="@style/style_font_normal_grey"
                    android:layout_marginTop="10dp"
                    android:text="今日总下单数"
                    android:textSize="@dimen/font_mini" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFinishRate"
                    style="@style/style_font_normal_black" />

                <TextView
                    style="@style/style_font_normal_grey"
                    android:layout_marginTop="10dp"
                    android:text="今日总付款额"
                    android:textSize="@dimen/font_mini" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearch"
            style="@style/style_edit_login"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivSearch"
                style="@style/w_40"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/search_product" />

            <EditText
                android:id="@+id/etUsername"
                style="@style/style_edit_login"
                android:hint="请输入店铺名称"
                android:inputType="text"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_common_listview" />

</LinearLayout>
