<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dp_2"
        android:maxLines="1"
        android:text="iPhone XR低价销售，机会不容错过，真是一年最低价，走过路过不要错过XR低价销售，机会不容错过，真是一年最低价，走"
        android:textColor="@color/font_main_title"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/store" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/dp_2"
            android:text="Apple官方直营"
            android:textColor="@color/font_hint"
            android:textSize="@dimen/font_mini" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="@dimen/dp_2"
            android:text="￥1230.60"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_mini" />

    </LinearLayout>

    <View
        style="@style/style_horizon_line"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10" />
</LinearLayout>